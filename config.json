{
    "config_version":  "1.2",
    
    "theme_name" : "_svbk",
    "theme_handle" : "_svbk",
    
	"content_width": 1120,
	"page_max_width": 1366,	
	"sidebar_width_ratio": 0.3,
	
	"main_breakpoints" : {
	    "phone":			480,
	    "tablet-portrait":	600,
	    "tablet-landscape": 900,
	    "desktop":			1200,
	    "desktop-large":	1800
	},
	
	"fonts": {
		"main" : {
			"_source": "'https://fonts.googleapis.com/css?family=Open+Sans:400,700|Roboto:400,700'",
			"_fallback": {
				"font-family": "'Arial'",
				"letter-spacing": "0.5px",
				"word-spacing": "-0.45px"
			},
			"font-family": "Roboto"
		},
		"headings" : {
			"_source": "'https://fonts.googleapis.com/css?family=Open+Sans:400,700|Roboto:400,700'",
			"_fallback": {
				"font-family": ["Arial", "Helvetica", "sans-serif"]
			},
			"font-family": "'Open Sans'"
		}
	},
	
	"font_sizes": {
		"small":{
			"name":"Small",
			"shortName":"S",
			"size":19.5
		},
		"normal": {
			"name":"Normal",
			"shortName":"M",
			"size":22
		},
		"large": {
			"name":"Large",
			"shortName":"L",
			"size":36.5
		},
		"huge": {
			"name":"Huge",
			"shortName":"XL",
			"size":49.5
		}		
	},
	
	"icons": {
		"theme" : {
			"_source": "'style/icons/style.css'",
			"_chars": "B",
			"font-family": "'theme-icons'"
		}
	},
	
	"color_palette": {
		"primary" : {
			"name":"Principale",
			"color":"#000"
		},
		"secondary": {
			"name":"Secondary",
			"color":"#777"
		},
		"dark-gray":{
			"name":"Dark Gray",
			"color":"#444"
		},
		"light-gray": {
			"name":"Light Gray",
			"color":"#767676"
		},
		"white": {
			"name":"White",
			"color":"#FFF"
		}		
	}
}